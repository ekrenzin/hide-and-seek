{
	"functions": {
		"source": "functions"
	},
	"hosting": {
		"public": "./build",
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
	},
	"emulators": {
		"functions": {
			"port": "8081"
		},
		"firestore": {
			"port": 8082
		},
		"hosting": {
			"port": "3000"
		},
		"pubsub": {
			"port": 8085
		},
		"auth": {
			"port": 9099
		},
		"storage": {
			"port": 9199
		},
		"ui": {
			"enabled": true
		}
	}
}
